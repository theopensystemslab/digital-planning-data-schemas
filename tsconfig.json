{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "composite": true,
    "declarationMap": true
  },
  "include": [
    "examples/**/*.ts",
    "schemas/**/*.json",
    "scripts/**/*.ts",
    "tests/**/*.ts",
    "types/**/*.ts",
    "typebox/**/*.ts"
  ]
}
