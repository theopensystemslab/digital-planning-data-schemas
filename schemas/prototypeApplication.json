{
  "$id": "@next",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "anyOf": [
    {
      "$ref": "#/definitions/PPApplication"
    },
    {
      "$ref": "#/definitions/PAApplication"
    },
    {
      "$ref": "#/definitions/WTTApplication"
    }
  ],
  "definitions": {
    "ApplicationDataBase": {
      "additionalProperties": false,
      "description": "Base type for ApplicationData. Contains all shared properties across all application types",
      "properties": {
        "somethingShared": {
          "type": "string"
        }
      },
      "required": [
        "somethingShared"
      ],
      "type": "object"
    },
    "PAApplication": {
      "additionalProperties": false,
      "properties": {
        "applicationType": {
          "$ref": "#/definitions/PAApplicationType"
        },
        "data": {
          "additionalProperties": false,
          "properties": {
            "application": {
              "$ref": "#/definitions/ApplicationDataBase"
            },
            "user": {
              "$ref": "#/definitions/UserBase"
            }
          },
          "required": [
            "user",
            "application"
          ],
          "type": "object"
        }
      },
      "required": [
        "applicationType",
        "data"
      ],
      "type": "object"
    },
    "PAApplicationType": {
      "enum": [
        "pa",
        "pa.part1.classA",
